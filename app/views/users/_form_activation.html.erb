<%= form_for @user, url: {controller: 'users', action: 'set_activation', token: params[:token]} do |f| %>
    <fieldset>
      <legend><%= t('views.users.form_activation.title') %></legend>
      <dl>
        <div>
          <dt><%= f.label :password, t('views.users.form_activation.password') %></dt>
          <dd><%= f.password_field :password, placeholder: t('views.users.form_activation.password_placeholder') %></dd>
        </div>
        <div>
          <dt><%= f.label :password_confirmation, t('views.users.form_activation.password_confirmation') %></dt>
          <dd><%= f.password_field :password_confirmation, placeholder: t('views.users.form_activation.password_confirmation_placeholder') %></dd>
        </div>
        <dd data-type="button" class="form-submit">
          <button name="submit" type="submit" id="submit"><%= t('views.users.form_activation.activate') %></button>
        </dd>
      </dl>
    </fieldset>
<% end %>